rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Stories can only be read or written by the user who owns them.
    // This prevents users from seeing each other's stories.
    match /stories/{storyId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Anyone can read users, but only the user can write to their own doc.
    // (This collection isn't used yet, but is a good example).
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
